menu "FreeRTOS Eth Drivers"
    config FREERTOS_USE_XMAC
        select ENABLE_FXMAC
        bool
        prompt "Use FreeRTOS xmac driver"
        default n
    
    config FREERTOS_USE_GMAC
        select ENABLE_FGMAC
        bool
        prompt "Use FreeRTOS gmac driver"
        default n

    config FREERTOS_USE_XMAC_V2
        select ENABLE_FXMAC_V2
        bool
        prompt "Use Freertos xmac v2 driver"
        default n        
endmenu

