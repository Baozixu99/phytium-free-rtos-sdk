menu "FreeRTOS Uart Drivers"
    config FREERTOS_USE_UART
        bool
        prompt "Use FreeRTOS uart driver"
        default n
        select USE_SERIAL
        select ENABLE_Pl011_UART
        
    config FREERTOS_USE_SERIAL_V2
        bool
        prompt "Use FreeRTOS serial v2 driver"
        default n
        select USE_SERIAL
        select USE_SERIAL_V2
endmenu

