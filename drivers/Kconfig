menu "Freertos Uart Drivers"
    config FREERTOS_USE_UART
        bool
        prompt "Use Freertos uart driver"
        default n
endmenu

menu "Freertos Pwm Drivers"
    config FREERTOS_USE_PWM
        bool
        prompt "Use Freertos pwm driver"
        default n
        select USE_PWM
        select USE_FPWM
endmenu

